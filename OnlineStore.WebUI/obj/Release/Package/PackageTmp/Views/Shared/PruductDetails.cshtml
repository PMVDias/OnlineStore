@model OnlineStore.Domain.Entities.Product
<div class="product-details">
    <!--product-details-->
    <div class="col-sm-5">
        <div class="view-product">
            @if (Model.ImageData != null)
            {
                <div class="pull-left" style="margin-right: 10px">
                    <img src="@Url.Action("GetImage", "Product", new { Model.ProductID })" />
                </div>
            }
            else
            {
                <div class="pull-left" style="margin-right: 10px">
                    <img src="~/Content/images/404/404.png" />
                </div>
            }
        </div>
    </div>
    <div class="col-sm-7">
        <div class="product-information">
            <!--/product-information-->
            <img src="~/Content/images/product-details/new.jpg" class="newarrival" alt="">
            <h2>@Model.Name</h2>
            <p><b>Web ID:</b>@Model.ProductID</p>
            <p>@Model.Price.ToString("c")</p>
            <p><b>Availability:</b> In Stock</p>
            <p><b>Condition:</b> New</p>
            <p><b>Category:</b> @Model.Category</p>
            <p><b>Summary:</b> @Model.Description</p>

            @using (Html.BeginForm("AddToCart", "Cart"))
            {
                <div>
                    @Html.HiddenFor(x => x.ProductID)
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                    <button type="submit" class="btn btn-default">
                        <i class="fa fa-shopping-cart"></i>
                        Add to cart
                    </button>
                </div>
            }
            <p>
                <img src="~/Content/images/product-details/rating.png" alt="">
            </p>
            <a href=""><img src="~/Content/images/product-details/share.png" class="share img-responsive" alt=""></a>
        </div><!--/product-information-->
    </div>
</div>
